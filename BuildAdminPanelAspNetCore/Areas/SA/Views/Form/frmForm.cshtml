            </div>
        </div>
        <br />
        <div class="card-body">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead class="thead-dark">
                    <tr class="text-center">
                      @*  <th>FormID</th>*@
                        <th>FormName</th>
                        <th>FormURL</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

